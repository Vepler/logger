{
  "name": "@vepler/logger",
  "version": "1.1.0",
  "description": "A TypeScript wrapper for the Pino logging library, designed for use in microservices.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "git remote add origin git@github.com:Vepler/vpr-logger.git",
  "author": "Vepler Limited",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "prepare": "husky install",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "private": false,
  "dependencies": {
    "pino": "^9.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint",
      "prettier --write"
    ]
  },
  "keywords": [
    "pino-wrapper",
    "pino-logger",
    "pino",
    "logger",
    "logging"
  ]
}
